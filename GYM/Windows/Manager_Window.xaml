<Window x:Class="GYM.Windows.Manager_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GYM.Windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Manager_Window" Height="450" Width="800">
    <Grid>
        <DataGrid Name="DataGrid_Devices" HorizontalAlignment="Center" Height="250" Margin="0,25,0,0" VerticalAlignment="Top" Width="580" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Height="43" Margin="205,302,0,0" VerticalAlignment="Top" Width="122" Click="Delete_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="43" Margin="457,302,0,0" VerticalAlignment="Top" Width="122" Click="Add_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Height="37" Margin="34,349,0,0" VerticalAlignment="Top" Width="103" Click="Back_Click"/>

    </Grid>
</Window>
