        <TextBox Name="Name" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" Height="22"/>
        <TextBox Name="PhoneNumber" HorizontalAlignment="Left" Height="22" Margin="10,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
        <TextBox Name="Subscription" HorizontalAlignment="Left" Height="22" Margin="10,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
