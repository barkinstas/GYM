        <Label Content="Абонемент" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top" Width="83"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="34" Margin="369,270,0,0" VerticalAlignment="Top" Width="111" Click="Add_Clients"/>
        <TextBox Name="Trainer" HorizontalAlignment="Left" Height="22" Margin="275,47,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="201"/>
        <Label Content="Тренер" HorizontalAlignment="Left" Margin="275,16,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox Name="Attendance" HorizontalAlignment="Left" Height="22" Margin="275,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201"/>
